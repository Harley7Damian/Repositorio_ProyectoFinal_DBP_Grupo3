@{
}
<html>
<head>
    <link rel="stylesheet" href="~/css/LoginUsu.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>

<body>
    <div class="container">
        <form class="form-signin" asp-controller="Usuario" asp-action="ValidarUsuario" id='valForm' method="post">
            <input type="hidden" name="${_csrf.parameterName}" value="${_csrf.token}" />
            <h2 class="form-signin-heading">Sign in</h2>
            <label for="inputEmail" class="sr-only">Username</label>
            <input type="text" class="form-control" placeholder="Username"
                   asp-for="UsuNombre" id="username" />
            <label for="inputPassword" class="sr-only">Password</label>
            <input type="password" class="form-control" placeholder="Password"
                   asp-for="UsuClave" id="password" />
            <button class="btn btn-lg btn-primary btn-block" type="submit">
                <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> Sign in
            </button>
        </form>
        
        <div class="form-signin-heading">
            <div class="text-dark">
                <b><a asp-controller="UsuarioRegistro" asp-action="Nuevo">Registrarme</a></b>
            </div>
        </div>
   
</body>
</html>