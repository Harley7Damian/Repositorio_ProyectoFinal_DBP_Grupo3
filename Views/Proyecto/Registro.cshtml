@{
}
<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <LINK REL=StyleSheet HREF="~/css/registro.css" TYPE="text/css" MEDIA=screen>
</head>
<body>
    <div class="container">

        <h1>FORMULARIO DE REGISTRO</h1>
        <form asp-controller="Proyecto" asp-action="ListarUsuario" method="post">
            <div class="form-group">
                <label for="formGroupExampleInput">Id</label>
                <input type="text" class="form-control" id="formGroupExampleInput" placeholder="DNI" asp-for="Id">
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Nombre Producto</label>
                <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Nombre" asp-for="Nombre">
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Precio Producto</label>
                <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Apellido" asp-for="Apellido">
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Stock Producto</label>
                <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Edad" asp-for="Edad">
                <span asp-validation-for="Edad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary" value="btn" name="grabar" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Grabar</button>
                <button type="submit" class="btn btn-primary" value="btn" name="modificar">Modificar</button>
            </div>
            <div class="form-group">
            </div>
            <div class="text-dark">
                <a asp-action="Index">Regresar</a>
            </div>
        </form>
    </div>

</body>
</html>

